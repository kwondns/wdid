{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/components": [
        "components"
      ],
      "@/templates": [
        "templates"
      ],
      "@/pages": [
        "pages"
      ],
      "@/libs": [
        "libs"
      ],
      "@/stores": [
        "stores"
      ],
      "@/hooks": [
        "hooks"
      ],
      "@/types": [
        "types"
      ],
      "@/constants": [
        "constants"
      ],
      "@/apis": [
        "apis"
      ]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    ".eslintrc.cjs",
    "vite.config.ts",
    "tailwind.config.ts",
    "postcss.config.js"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
